{
  "extends": "./tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./out-tsc/app",
    "types": ["socket.io-client"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/app/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
